{
  "manifest_version": 2,
  "name": "Tradera Chrome",
  "version": "1.0.0",
  "description": "Opens the current selection on Tradera.se",
  "author": "Urban Sanden",
  "permissions": [
     "tabs",
     "contextMenus",
     "activeTab",
     "http://*/*",
     "https://*/*"
  ],
  "background": {
   "persistent": false,
   "scripts": ["js/background.js"]
   },
   "browser_action": {
      "default_icon": {
        "19": "images/browsericon.png",
        "38": "images/browsericon.png"
      },
      "default_title": "Tradera"
    },
   "icons": {
     "16": "images/favicon.png",
     "128": "images/favicon.png"
    }
}
